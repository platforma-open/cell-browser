ll := import("@platforma-sdk/workflow-tengo:ll")
wf := import("@platforma-sdk/workflow-tengo:workflow")
pSpec := import("@platforma-sdk/workflow-tengo:pframes.spec")

getAnnotationAxesSpec := func(args) {
	if is_undefined(args.inputAnchorColumn) {
		return undefined
	}

	if len(args.inputAnchorColumn.spec.axesSpec) != 3 {
		ll.panic("Input anchor must have exactly 3 axes (sample, cell, and gene), found %d", len(args.inputAnchorColumn.spec.axesSpec))
	}

	sampleAxisSpec := args.inputAnchorColumn.spec.axesSpec[0]
	cellAxisSpec := args.inputAnchorColumn.spec.axesSpec[1]
	// geneAxisSpec := args.inputAnchorColumn.spec.axesSpec[2]

	return [sampleAxisSpec, cellAxisSpec]
}

export ll.toStrict({
	getAnnotationAxesSpec: getAnnotationAxesSpec
})
